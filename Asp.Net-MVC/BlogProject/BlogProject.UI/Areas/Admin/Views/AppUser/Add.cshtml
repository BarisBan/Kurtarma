
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}

<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="#">Forms</a></li>
        <li class="active">Add User</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Add User</h3>
                </div>
                <form role="form" action="/Admin/AppUser/Add" method="post" enctype="multipart/form-data">
                    <div class="box-body">
                        <div class="form-group">
                            <label>Firstname</label>
                            <input type="text" name="FirstName" class="form-control" placeholder="Firstname">
                        </div>
                        <div class="form-group">
                            <label>Lastname</label>
                            <input type="text" name="LastName" class="form-control" placeholder="Lastname">
                        </div>
                        <div class="form-group">
                            <label>Username</label>
                            <input type="text" name="UserName" class="form-control" placeholder="Username">
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" name="Email" class="form-control" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" name="Password" class="form-control" placeholder="Password">
                        </div>
                        <div class="form-group">
                            <label>Role</label>
                            <select name="Role" class="form-control">
                                @foreach (var item in Enum.GetNames(typeof(BlogProject.DAL.ORM.Enum.Role)))
                                {
                                    <option value="@item">@item</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <div class="col-md-offset-2" style="float:right">
                            <a href="/Admin/AppUser/List" class="btn btn-block btn-default">User List</a>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>
