
@{
    ViewBag.Title = "UpdateUser";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}

@model WareHouseProject.UI.Areas.Admin.Models.DTO.UserDTO

<section class="content-header">
    <ol class="breadcrumb bg-aqua bg-gray-active">
        <li><a href="/Admin/Home/AdminHomeIndex"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="/Admin/AppUser/AddUser">Add User</a></li>
        <li><a href="/Admin/AppUser/UserList">User List</a></li>
        <li class="active">Update User</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Add User</h3>
                </div>
                <form action="/Admin/AppUser/UpdateUser" method="post" role="form">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="FirstName">First Name</label>
                            <input type="text" value="@Model.FirstName" name="FirstName" class="form-control" placeholder="First Name">
                        </div>
                        <div class="form-group">
                            <label for="LastName">Last Name</label>
                            <input type="text" value="@Model.LastName" name="LastName" class="form-control" placeholder="Last Name">
                        </div>
                        <div class="form-group">
                            <label for="EMAil">E- Mail</label>
                            <input type="text" value="@Model.Email" name="EMail" class="form-control" placeholder="E-Mail">
                        </div>
                        <div class="form-group">
                            <label for="UserName">User Name</label>
                            <input type="text" value="@Model.UserName" name="UserName" class="form-control" placeholder="User Name">
                        </div>                        
                        <div class="form-group">
                            <label for="Gender">Gender</label>
                            <select name="Gender" class="form-control">
                                @foreach (var item in Enum.GetNames(typeof(WareHouseProject.Model.Enum.Gender)))
                                {
                                    <option value="@item">@item</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="Role">Role</label>
                            <select name="Role" class="form-control">
                                @foreach (var item in Enum.GetNames(typeof(WareHouseProject.Model.Enum.Role)))
                                {
                                    <option value="@item">@item</option>
                                }
                            </select>
                        </div>
                    </div>
                    <input type="text" style="visibility:hidden" name="ID" value="@Model.ID" />
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <div class="col-md-offset-2" style="float:right">
                            <a href="/Admin/AppUser/UserList" class="btn btn-block btn-default">User List</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
